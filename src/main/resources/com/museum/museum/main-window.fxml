<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.museum.museum.controllers.MainWindowControl">
    <children>
        <TabPane fx:id="mainTab" prefHeight="411.0" prefWidth="675.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab fx:id="collectionTab" text="Kolekcijos">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="376.0" prefWidth="675.0">
                            <children>
                                <Label layoutX="140.0" layoutY="23.0" text="Kolekcijos">
                           <font>
                              <Font size="17.0" />
                           </font></Label>
                                <ListView fx:id="collectionsList" layoutX="49.0" layoutY="50.0" onMouseClicked="#selectCollection" prefHeight="285.0" prefWidth="256.0" />
                                <ListView fx:id="exhibitsList" layoutX="374.0" layoutY="50.0" onMouseClicked="#selectExhibit" prefHeight="285.0" prefWidth="256.0" />
                                <Label layoutX="461.0" layoutY="23.0" text="Eksponatai">
                           <font>
                              <Font size="17.0" />
                           </font></Label>
                                <Button fx:id="editCollectionButton" layoutX="133.0" layoutY="350.0" mnemonicParsing="false" onAction="#editCollection" text="Pakoreguoti" />
                                <Button layoutX="214.0" layoutY="350.0" mnemonicParsing="false" onAction="#deleteCollection" onMouseClicked="#deleteCollection" text="Ištrinti" textFill="#e11212" />
                                <Button fx:id="editExhibitButton" layoutX="467.0" layoutY="350.0" mnemonicParsing="false" onAction="#editExhibit" text="Pakoreguoti" />
                                <Button layoutX="548.0" layoutY="350.0" mnemonicParsing="false" onAction="#deleteExhibit" text="Ištrinti" textFill="#e11212" />
                                <Button fx:id="createCollectionButton" layoutX="82.0" layoutY="350.0" mnemonicParsing="false" onAction="#createCollection" text="Pridėti" />
                                <Button fx:id="createExhibitButton" layoutX="416.0" layoutY="350.0" mnemonicParsing="false" onAction="#createExhibit" text="Pridėti" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Vartotojo paskyra">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <TextField fx:id="loginName" layoutX="35.0" layoutY="94.0" prefHeight="25.0" prefWidth="250.0" />
                                <PasswordField fx:id="password" layoutX="35.0" layoutY="146.0" prefHeight="25.0" prefWidth="250.0" />
                                <TextField fx:id="name" layoutX="35.0" layoutY="198.0" prefHeight="25.0" prefWidth="250.0" />
                                <TextField fx:id="surname" layoutX="35.0" layoutY="250.0" prefHeight="25.0" prefWidth="250.0" />
                                <Label layoutX="35.0" layoutY="181.0" text="Vardas:" />
                                <Label layoutX="35.0" layoutY="129.0" text="Slaptažodis:" />
                                <Label layoutX="35.0" layoutY="77.0" text="Vartotojo vardas:" />
                                <Label layoutX="35.0" layoutY="233.0" text="Pavardė:" />
                                <Button layoutX="423.0" layoutY="292.0" mnemonicParsing="false" onAction="#updateUser" prefHeight="51.0" prefWidth="146.0" text="Atnaujinti" textFill="RED">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Button>
                                <Label layoutX="349.0" layoutY="154.0" text="Įveskite vartotojo duomenis">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Vartotojai">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <ListView fx:id="userListAdmin" layoutX="40.0" layoutY="40.0" onMouseClicked="#selectAdminUser" prefHeight="324.0" prefWidth="200.0" />
                                <Label layoutX="104.0" layoutY="23.0" text="Visi vartotojai" />
                                <Button fx:id="deleteUserButton" layoutX="410.0" layoutY="307.0" mnemonicParsing="false" onAction="#deleteUser" prefHeight="43.0" prefWidth="158.0" text="Panaikinti" textFill="RED">
                                    <font>
                                        <Font size="21.0" />
                                    </font>
                                </Button>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
